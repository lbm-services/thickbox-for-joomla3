   <files>
     <filename plugin="mosthickbox">mosthickbox.php</filename>
     <filename>thickbox/includes/smoothbox.css</filename>
	 <filename>thickbox/includes/smoothbox.js</filename>
         <filename>thickbox/includes/slimbox.css</filename>
	 <filename>thickbox/includes/slimbox.js</filename>
	<filename>thickbox/images/loading.gif</filename>
	<filename>thickbox/images/loadingAnimation.gif</filename>
	<filename>thickbox/images/image.gif</filename>
	<filename>thickbox/images/close.jpg</filename>
	<filename>thickbox/images/next_image.jpg</filename>
	<filename>thickbox/images/prev_image.jpg</filename>
