	<filename>thickbox/images/nextlabel.gif</filename>
	<filename>thickbox/images/prevlabel.gif</filename>
	<filename>thickbox/images/spacer.gif</filename>
	</files>
<params>
<param name="slimbox" type="radio" default="1" label="Lightbox effect" description="Use lightbox effect. Default=no">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="thumb_width" type="text" size="6" default="100" label="Thumbnail Width" description="Set the width of the thumbnail to be created (default: 100px)" />		
		<param name="thumb_height" type="text" size="6" default="75" label="Thumbnail Height" description="Set the height of the thumbnail to be created (default: 75px)" />		
		<param name="thumb_quality" type="text" size="6" default="80" label="Thumbnail Quality" description="Set the quality of the thumbnail to be created (default: 80, max: 100)" />		
</params>
  <languages>
    <language tag="en-GB">language/en-GB/en-GB.plg_content_mosthickbox.ini</language>
  </languages>
		
</install>

