	  <languages>
    <language tag="en-GB">en-GB/en-GB.plg_content_thickbox.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_content_thickbox.sys.ini</language>
  </languages>
<config>
		<fields name="params">
		<fieldset name="basic">
<field name="slimbox" type="radio" default="1" label="Lightbox effect" description="Use lightbox effect. Default=no">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		<field name="thumb_width" type="text" size="6" default="100" label="Thumbnail Width" description="Set the width of the thumbnail to be created (default: 100px)" />		
		<field name="thumb_height" type="text" size="6" default="75" label="Thumbnail Height" description="Set the height of the thumbnail to be created (default: 75px)" />		
		<field name="thumb_quality" type="text" size="6" default="80" label="Thumbnail Quality" description="Set the quality of the thumbnail to be created (default: 80, max: 100)" />		
</fieldset>

		</fields>
	</config>
		
</extension>
