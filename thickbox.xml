         <filename>includes/slimbox.css</filename>
	 <filename>includes/slimbox.js</filename>
	<filename>images/loading.gif</filename>
	<filename>images/loadingAnimation.gif</filename>
	<filename>images/image.gif</filename>
	<filename>images/close.jpg</filename>
